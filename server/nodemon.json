{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.spec.ts", "node_modules"],
  "exec": "npx tsx src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "killDelay": 5000,
  "restartable": "rs",
  "signal": "SIGKILL",
  "verbose": true,
  "events": {
